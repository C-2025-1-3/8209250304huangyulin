  #include <iostream>
using namespace std;
	int gcd(int a, int b)
	{
		while (b != 0)
		{
			int temp = b;
			b = a % b;
			a = temp;
		}
		return a;
	}
	int main()
	{

	int a, b;
	cout << "请输入两个正整数:";
	cin >> a >> b;
	int greatest_common_divisor = gcd(a, b);
	int least_common_multiple = (a * b) / greatest_common_divisor;
	cout << "最大公约数是: " << greatest_common_divisor << endl;
	cout << "最小公倍数是: " << least_common_multiple << endl;
    return 0;
}
