#include <iostream>
#include <iomanip>
const double PI = 3.14159265358979323846;
int main()
{
	double radius, height, volume;
	std::cout << "Enter the radius  ";
	std::cin >> radius;
	std::cout << "Enter the height  ";
	std::cin >> height;
	volume = PI * radius * radius * height;
	std::cout << "The volume of the cylinder is " << std::fixed << std::setprecision(2) << volume << std::endl;
	return 0;
}
